	<div class="col-sm-6">
    	<div class="panel panel-default">
    		<div class="panel-heading">
    	    	<h3 class="panel-title">Article d'origine</h3>
    		</div>
    		<div class="panel-body">
		        <div class="row">
		            <div class="col-xs-12">
		                <h2>En Détail</h2>
		            </div>
		        </div>
    			<div> 
    			    {{ articleModified.article.content|raw}} {# var won't be escaped #}
    			</div>
		    </div>
		</div>
	</div>
	<div class="col-sm-6">
		<div class="panel panel-default">
    		<div class="panel-heading">
    	    	<h3 class="panel-title">Article modifié</h3>
    		</div>
    		<div class="panel-body">
				<div class="row">
					<div class="col-xs-12">
						<div class="form-group">
							<h3>{{ form_label(form.content, "En Détail", {'label_attr': {'class': 'control-label'}}) }}</h3>
						    {{ form_errors(form.content) }}
						    <div class="col-sm-12">
						    	{{ form_widget(form.content, {'attr': {'class': 'tinymce form-control'}, 'value': articleModified.content}) }}
						    </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
