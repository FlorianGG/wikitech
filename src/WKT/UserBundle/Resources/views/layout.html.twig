{# src/WKT/UserBundle/Resources/views/layout.html.twig #}

{# On étend notre layout #}
{% extends "WKTCoreBundle:Core:layout.html.twig" %}

{# Dans notre layout, il faut définir le block body #}
{% block body %}
	<div class="blocProfile">
		<div class="row">
		    <section class="standardSection">
		        <div class="blocIntroProfile">
		            <img class="img-responsive" src="{{asset('images/icones/wikitechHome.svg')}}" alt="Wikitech">
		        </div>
		    </section>
		</div>
		<div class="row">
		    <section class="standardSection">
		    	<div class="col-xs-12">
		    		<hr>
		    		{% block h2Profile %}{% endblock %}
		    	</div>

		        <div class="col-xs-12">
		        	{% block fos_user_content %}{% endblock %}
		        </div> 
		    </section>
		</div> 
	</div>	
{% endblock %}
      


