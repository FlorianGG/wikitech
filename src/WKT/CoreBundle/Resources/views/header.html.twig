{# src/WKT/CoreBundle/Resources/views/header.html.twig #}

  <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img class="wikitechLogo" alt="Wikitech" src="{{ asset('images/icones/wikitech.svg') }}"></a>
          </div>
          <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><p><img class="imgLink" src="{{ asset('images/icones/homeIcon.svg') }}"> <a href="{{ path('wkt_core_home') }}"><span class="textLink">Accueil</span></a><p></li>
              {% if is_granted("ROLE_ADMIN") %}
              <li role="presentation" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administration <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('wkt_platform_commit_index') }}">Gestions des contributions</a></li>
                    <li><a href="{{ path('wkt_platform_add') }}">Gestion des formations</a></li>
                    <li><a href="{{ path('wkt_user_index') }}">Gestion des utilisateurs</a></li>
                </ul>
              {% endif %}
              </li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li>
                  <p>
                    {% if app.user and app.user.image is not empty %}
                      <img class="imgLink img-circle" src="{{ asset(app.user.image.webPath) }}" alt="{{ app.user.image.alt }}">
                    {% else %}
                       <img class="imgLink img-circle" src="{{ asset('images/icones/emptyPicture.svg') }}" alt="Utilisateur sans photo">
                    {% endif %}
                    <a href="{{ path('fos_user_profile_show') }}">{{ app.user.firstname }} {{ app.user.lastname }}</a>
                  </p>
                </li>
                <li><p><img class="imgLink" src="{{ asset('images/icones/logout.svg') }}" alt="Logout"><a href="{{ path('fos_user_security_logout') }}"> DÃ©connexion</a></p></li>
              {% else %}
                <li><p><img class="imgLink" src="{{ asset('images/icones/login.svg') }}" alt="Login"><a href="{{ path('fos_user_security_login') }}"> Connexion</a></p></li>
                <li><p><img class="imgLink" src="{{ asset('images/icones/register.svg') }}" alt="Inscription"><a href="{{ path('fos_user_registration_register') }}"> S'inscrire</a></p></li>
              {% endif %}
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
  </header>
