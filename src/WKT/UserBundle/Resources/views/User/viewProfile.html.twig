{% extends "@FOSUser/Profile/layout.html.twig" %}

{% block fos_user_content %}
	    <div class="bodyLeft bodyLeftProfile">
	    	<div class="col-xs-12">
	    		 <h2 class="text-center"><img class="imgLink" src="{{ asset('images/icones/profilPink.svg') }}"> Mon Profil</h2>
	    		{% if app.user.image is not empty %}
	    			<p class="text-center"><img class="img-circle imgProfile" src="{{ asset(user.image.webPath) }}" alt="{{user.image.alt }}"></p>  
	    		{% else %}
	    			<p class="text-center"><img class="imgProfile img-circle" src="{{ asset('images/icones/emptyPicture.svg') }}" alt="User sans photo de profil"></p>
	    		{% endif %}
	    		<h3 class="text-center">{{ user.firstname }} {{ user.lastname }} {% if user.additionalName is not empty %} {{ user.additionalName }} {% endif %}</h3>
	    		<p class="text-center">{{ user.nbPoint }} points</p>
    		    {% if user.biography is empty %}
    				<p class="text-center"><small><em>Sa biographie est vide...</em></small></p>
    			{% else %}
    				<p class="text-left"><small><em>{{ user.biography}}</em></small> </p>
    		    {% endif %}
	    	</div>
	    </div>
	    <div class="bodyRight">
	    	<div class="row">
	    	    <section class="articleSection">
	    	        <div class="col-xs-12">
	    	            <div class="col-xs-8 withoutPadding">
	    	                <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/cup.svg') }}"> Ses contributions</h2>
	    	            </div>
	    	            <div class="colButtonHome col-xs-4 ">
	    	                <a class="btn btn-default col-xs-3 buttonHome buttonHomeTop" href="{{path('wkt_core_contribution')}}">En savoir plus</a> 
	    	            </div>
	    	        </div>
	    	        <div class="col-xs-12 ">
	    	            {% if score is empty %}
	    	                <p class="text-center"><small><em>Aucune contribution réalisée</em></small></p>
	    	            {% else %}
	    	                {% for training in score %}
	    	                    <p>
	    	                        {% if training.training.image is not empty %}
	    	                            <img class="imgTop img-circle" src="{{ asset(training.training.image.webPath) }}" alt="{{ training.training.image.alt }}">
	    	                        {% else %}
	    	                            <img class="imgTop img-circle" src="{{ asset('images/training.jpeg') }}" alt="Formation sans miniature">
	    	                        {% endif %}
	    	                       	{{training.training.title}} - {{training.score}} points
	    	                    </p>
	    	                {% endfor %}                 
	    	            {% endif %}
	    	        </div>
	    	    </section>
	    	</div>
	    	<div class="row">
	    	    <section class="articleSection">
	    	        <div class="col-xs-12">
	    	        	<hr>
	    	            <div class="col-xs-12 withoutPadding">
	    	                <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/info.svg') }}"> Ses informations</h2>
	    	            </div>
	    	        </div>
	    	        <div class="col-xs-12 ">
	    	        	<p><img class="imgLinkProfile" src="{{ asset('images/icones/localisation.svg') }}"> Localisation : 
	    	        		{% if user.country is empty and user.country is empty %}
	    	        			<small><em>Quelque part dans la galaxie</em></small>
	    	        		{% endif %}
	    	        		{{ user.locality }}
	    	        		{% if user.country is empty or user.country is empty %}
	    	        		{% else %}
	    	        		 - 
	    	        		{% endif %}
	    	        		{{ user.country }}
	    	        	</p>
	    	            <p><img class="imgLinkProfile" src="{{ asset('images/icones/email.svg') }}"> Adresse email : {{ user.email }}</p>
	    	            <p><img class="imgLinkProfile" src="{{ asset('images/icones/company.svg') }}"> Entreprise actuelle : {{ user.company }}</p>
	    	        </div>
	    	    </section>
	    	</div>
	    	<div class="row">
	    	    <section class="articleSection">
	    	        <div class="col-xs-12">
	    	        	<hr>
	    	            <div class="col-xs-12 withoutPadding">
	    	                <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/link.svg') }}"> Ses liens</h2>
	    	            </div>
	    	        </div>
	    	        <div class="col-xs-12 ">
	    	        	{% include 'WKTUserBundle:Link:indexByUser.html.twig'%}
	    	        </div>
	    	    </section>
	    	</div>
	    </div>
{% endblock fos_user_content %}
{% block javascripts %}
  {{parent()}}
  {% javascripts 'bundles/wktuser/removeTrashLink.js'%} 
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}








