{# src/WKT/PlatformBundle/Resources/views/Article/layout.html.twig #}

{% extends 'WKTCoreBundle:Core:layout.html.twig' %}
{% block bodyLeft %}
    {% if article.part.training.image is empty %}
        <div class="thumbnail">
            <div class="caption">
                <h3>{{article.part.training.title}}</h3>
            </div>
            <img src="{{asset('images/training.jpeg')}}" alt="Miniature Wikitech">
        </div>
    {% else %}
        <div class="thumbnail">
            <div class="caption">
                <h3>{{article.part.training.title}}</h3>
            </div>
            <img src="{{ asset(article.part.training.image.webPath) }}" alt="{{ article.part.training.image.alt }}">
        </div>
    {% endif %}
    {% block addPart %}{% endblock %}
    <div class="linkSummary">
         <a href="{{ path('wkt_platform_view', {'id': article.part.training.id, 'slugTraining': article.part.training.slug}) }}">RETOURNER AU SOMMAIRE</a>
         <hr>
    </div>
    {% block summaryInTraining %}{% endblock %}
    {% include('WKTPlatformBundle:ArticleModified:buttonAdd.html.twig') %}
{% endblock %}
{% block bodyRight %}
    {% block articleInTraining %}{% endblock %} 
{% endblock %}

