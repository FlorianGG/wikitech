{# src/WKT/PlatformBundle/Resources/views/ArticleModified/view.html.twig #}

{% extends 'WKTPlatformBundle:ArticleModified:layout.html.twig' %}
{% block addArticle %}
    {{ path('wkt_platform_article_modified_add_new_article', {'id': articleModified.article.part.training.id}) }}
{% endblock %}
{% block urlArticleModified %}
    {{ path('wkt_platform_article_modified_view', {'id': articleModified.id}) }}
{% endblock %}

{% block articleModified %}
        {{ parent() }}
        <div class="row">
            <section class="articleSection">
                <div class="col-xs-12">
                    <div class="col-xs-8 withoutPadding">
                        <h1 class="withoutMargin titleTraining">{{ articleModified.title}}</h1>
                    </div>
                    <div class=" col-xs-4 ">
                        <a class="btn btn-default col-xs-3 buttonHome buttonHomeTop buttonArticleModifyVideo" href="{{ path('wkt_platform_article_modified_edit', {'id': articleModified.id}) }}">Modifier</a>
                    </div>
                </div>
            </section>
        </div>
        <div class="buttonLinkArticle">
            <p><a class="summaryInArticle" href="#en_Bref" title="">En Bref</a></p>
            <p><a class="summaryInArticle" href="#en_Detail" title="">En Détail</a></p>
            {% include 'WKTPlatformBundle::summaryArticle.html.twig' %}
            <p><a class="summaryInArticle" href="#en_Video" title="">En Video</a></p>   
        </div>
        <div id="en_Bref" class="row">
            <section class="articleSection">
                <div class="col-xs-12">
                    <hr>
                    <div class="col-xs-8 withoutPadding">
                        <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/bref.svg') }}"> En bref</h2>
                    </div>
                    <div class=" col-xs-4 ">
                        <a class="btn btn-default col-xs-3 buttonHome buttonHomeTop buttonArticleModifyBref" href="{{ path('wkt_platform_article_modified_edit', {'id': articleModified.id}) }}#en_Bref">Modifier</a>
                    </div>
                </div>

                <div class="col-xs-12 ">
                      {{ articleModified.introduction|raw}}}
                </div>
            </section>
        </div>
        <div id="en_Video" class="row">
            <section class="articleSection">
                <div class="col-xs-12">
                    <hr>
                    <div class="col-xs-8 withoutPadding">
                        <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/video.svg') }}"> En video</h2>
                    </div>
                    <div class=" col-xs-4 ">
                        <a class="btn btn-default col-xs-3 buttonHome buttonHomeTop buttonArticleModifyVideo" href="{{ path('wkt_platform_article_modified_edit', {'id': articleModified.id}) }}#en_Video">Modifier</a>
                    </div>
                </div>

                <div class="col-xs-12 ">
                    {% if articleModified.video.url is not defined %}
                        <div class="buttonLinkArticle">
                            <p class="noVideo">Aucune vidéo n'est enregistrée sur cet article</p> 
                        </div>
                    {% else %}
                        <div class="embed-responsive embed-responsive-16by9">
                          <iframe class="embed-responsive-item" allowfullscreen src="https://www.youtube.com/embed/{{ articleModified.video.url}}"></iframe>
                        </div>
                    {% endif %}
                </div>
            </section>
        </div>
        <div id="en_Detail" class="row">
            <section class="articleSection">
                <div class="col-xs-12">
                    <hr>
                    <div class="col-xs-8 withoutPadding">
                        <h2 class="withoutMargin"><img class="imgLink" src="{{ asset('images/icones/detail.svg') }}"> En detail</h2>
                    </div>
                    <div class=" col-xs-4 ">
                        <a class="btn btn-default col-xs-3 buttonHome buttonHomeTop buttonArticleModifyDetail" href="{{ path('wkt_platform_article_modified_edit', {'id': articleModified.id}) }}#en_Detail">Modifier</a>
                    </div>
                </div>

                <div class="col-xs-12 ">
                      {{ articleModified.content|raw}}
                </div>
            </section>
        </div>
        <hr>
        <p><a class="btn btn-primary col-xs-4 col-xs-offset-4" href="{{ path('wkt_platform_article_view', {'id': articleModified.article.id, 'slugTraining': articleModified.article.part.training.slug, 'slugArticle': articleModified.article.slug}) }}">Article principal</a></p>
        </div>
{% endblock %}



