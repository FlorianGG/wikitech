{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
<div class="jumbotron">
	<h1>Modification mot de passe</h1>
</div>
{% trans_default_domain 'FOSUserBundle' %}
<div class="well">
	{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
	    <div class="form-group" id="lastname">
	      {{ form_label(form.current_password, "Mot de passe actuel", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.current_password) }}
	      {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
	    </div>
	    <div class="form-group" id="password1">
	      {{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.plainPassword.first) }}
	      {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
	    </div>
	    <div class="form-group" id="password2">
	      {{ form_label(form.plainPassword.second, "Nouveau mot de passe", {'label_attr': {'class': 'control-label'}}) }}
	      {{ form_errors(form.plainPassword.second) }}
	      {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
	    </div>
	    <p><div class="" id="passwordStrength"></div></p>
	    <div>
	        <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
	    </div>
	    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>
{% endblock fos_user_content %}
{% block javascripts %}
  {{parent()}}
  {% javascripts 'bundles/wktuser/checkFormChangePassword.js'%} 
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
